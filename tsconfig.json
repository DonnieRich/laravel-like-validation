{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "verbatimModuleSyntax": true,
        "typeRoots": [
            "./types",
        ]
    },
    "include": [
        "src/**/*"
    ],
    "watchOptions": {
        "excludeDirectories": [
            "**/node_modules",
            "_build",
            "temp/*"
        ]
    },
    "lib": ["ES2020", "DOM"]
}